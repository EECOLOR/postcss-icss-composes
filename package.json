{
  "name": "postcss-modules-scope",
  "version": "1.1.0",
  "description": "A CSS Modules transform to extract export statements from local-scope classes",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel --out-dir lib src",
    "test": "jest --coverage",
    "precommit": "lint-staged",
    "prepublish": "yarn run test && yarn run build"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "extends": "eslint:recommended"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 4
          }
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/css-modules/postcss-modules-scope.git"
  },
  "keywords": [
    "css-modules",
    "postcss",
    "plugin"
  ],
  "files": [
    "lib"
  ],
  "author": "Glen Maddern",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/css-modules/postcss-modules-scope/issues"
  },
  "homepage": "https://github.com/css-modules/postcss-modules-scope",
  "dependencies": {
    "css-selector-tokenizer": "^0.7.0",
    "icss-utils": "^2.1.0",
    "postcss": "^6.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^20.0.3",
    "babel-preset-env": "^1.5.1",
    "css-selector-parser": "^1.0.4",
    "eslint": "^4.0.0",
    "husky": "^0.13.3",
    "jest": "^20.0.3",
    "lint-staged": "^3.4.2",
    "prettier": "^1.3.1",
    "strip-indent": "^2.0.0"
  }
}
